<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/list_view_item_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@id/itemRadios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="0sp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp">

        <RadioButton
            android:id="@id/buttonAllow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:padding="0sp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp" />

        <RadioButton
            android:id="@id/buttonWiFiOnly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp" />

        <RadioButton
            android:id="@id/buttonBlock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:textColor="#ff0000" />
    </RadioGroup>

    <ImageView
        android:id="@id/itemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxWidth="40sp"
        android:minWidth="40sp"
        android:paddingLeft="0sp"
        android:src="@drawable/country" />

    <TextView
        android:id="@id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0sp"
        android:layout_toLeftOf="@id/itemRadios"
        android:layout_toRightOf="@id/itemIcon"
        android:paddingLeft="4sp"
        android:paddingTop="2sp"
        android:singleLine="true"
        android:text="Sample text"
        android:textSize="20sp" />

    <TextView
        android:id="@id/itemUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:layout_toRightOf="@id/itemIcon"
        android:drawableLeft="@drawable/up"
        android:minWidth="56sp"
        android:paddingLeft="4sp"
        android:paddingRight="4sp"
        android:text="100K"
        android:textSize="12sp" />

    <TextView
        android:id="@id/itemDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:layout_toRightOf="@id/itemUpload"
        android:drawableLeft="@drawable/down"
        android:minWidth="56sp"
        android:paddingLeft="4sp"
        android:paddingRight="4sp"
        android:text="200K"
        android:textSize="12sp" />

    <TextView
        android:id="@id/itemOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/itemDownload"
        android:layout_alignTop="@id/itemDownload"
        android:layout_marginRight="10sp"
        android:layout_toLeftOf="@id/itemRadios"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:text="O"
        android:textColor="#c2c823"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@id/itemNight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/itemDownload"
        android:layout_alignTop="@id/itemDownload"
        android:layout_marginRight="6sp"
        android:layout_toLeftOf="@id/itemOffice"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:text="N"
        android:textColor="#c2c823"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@id/itemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/itemDownload"
        android:layout_alignTop="@id/itemDownload"
        android:layout_marginRight="6sp"
        android:layout_toLeftOf="@id/itemNight"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:text="B"
        android:textColor="#c2c823"
        android:textSize="12sp"
        android:visibility="gone" />
</RelativeLayout>
